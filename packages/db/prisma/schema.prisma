generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  username   String
  email      String
  password   String
  imageUrl   String?
  isVerified Boolean      @default(false)
  otp        String
  otpExpiry  DateTime
  isAdmin    Boolean      @default(false)
  challenges Challenges[]
}

model Contest {
  id         String        @id @default(uuid())
  title      String
  duration   Int // seconds
  startsAt   DateTime
  status     ContestStatus @default(NOTSTARTED)
  challenges Challenges[]
}

model Challenges {
  id                String          @id @default(uuid())
  title             String
  notionLink        String
  testFile          String
  dockerComposeFile String
  startupScript     String
  totalTestCases    Int
  passedTestCases   Int?
  challengeStatus   ChallengeStatus @default(NOTATTEMPTED)
  contestId         String
  contest           Contest         @relation(fields: [contestId], references: [id])
  user              User            @relation(fields: [userId], references: [id])
  userId            Int
}

model ContestResult {
  id String @id @default(uuid())
}

enum ContestStatus {
  RUNNING
  ENDED
  NOTSTARTED
}

enum ChallengeStatus {
  NOTATTEMPTED
  COMPLETED
  ATTEMPTED
}
