generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  username         String
  email            String
  password         String
  imageUrl         String?
  isVerified       Boolean           @default(false)
  otp              String
  otpExpiry        DateTime
  isAdmin          Boolean           @default(false)
  contestResults   ContestResult[]
  challengeResults ChallengeResult[]
  contests         Contest[]
}

model Contest {
  id            String         @id @default(uuid())
  title         String
  subtitle      String?
  duration      Int // seconds
  isDeleted     Boolean        @default(false)
  startsAt      DateTime       @db.Timestamptz(3)
  challenges    Challenge[]
  contestResult ContestResult?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?
  user          User           @relation(fields: [userId], references: [id])
  userId        String // how do i enforce one more constraint that user can only be admin 
}

model Challenge {
  id                    String           @id @default(uuid())
  title                 String
  notionLink            String
  testFile              String
  baseGithubUrl         String?
  engineExecutionScript String?
  withDocker            Boolean?
  dockerComposeFile     String
  startupScript         String
  totalTestCases        Int
  contestId             String
  contest               Contest          @relation(fields: [contestId], references: [id])
  challengeResult       ChallengeResult?
}

model ContestResult {
  id      String        @id @default(uuid())
  status  ContestStatus
  score   Int           @default(0)
  penalty Int           @default(0)

  challengeResult ChallengeResult[]
  contestId       String            @unique
  contest         Contest           @relation(fields: [contestId], references: [id])
  userId          String
  user            User              @relation(fields: [userId], references: [id])

  @@unique([userId, contestId])
}

model ChallengeResult {
  id              String        @id @default(uuid())
  score           Int           @default(0)
  penalty         Int           @default(0)
  duration        Int           @default(0)
  penaltyFactor   Int           @default(0)
  contestResultId String
  contestResult   ContestResult @relation(fields: [contestResultId], references: [id])
  challengeId     String        @unique
  challenge       Challenge     @relation(fields: [challengeId], references: [id])
  userId          String
  user            User          @relation(fields: [userId], references: [id])
}

enum ContestStatus {
  RUNNING
  ENDED
}
